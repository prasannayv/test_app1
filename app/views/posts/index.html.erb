<h1>Listing posts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.name %></td>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', posts_path %></td>
    <td><%= link_to 'Edit', posts_path(post) %></td>
    <td><%= link_to 'Destroy', posts_path, :confirm => 'Are you sure?',:method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New post', posts_path %>